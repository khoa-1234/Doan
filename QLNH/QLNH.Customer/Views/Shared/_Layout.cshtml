<script>
    document.addEventListener("DOMContentLoaded", function () {
        const bookTableButton = document.getElementById("btn-book-a-table");

        // Lắng nghe sự kiện click
        bookTableButton.addEventListener("click", function (event) {
            event.preventDefault(); // Ngăn điều hướng mặc định của nút

            // Đặt trạng thái robot hiển thị trong sessionStorage
            sessionStorage.setItem("showRobot", "true");

            // Điều hướng tới form đặt bàn
            window.location.href = "#book-a-table";
        });
    });
</script>
